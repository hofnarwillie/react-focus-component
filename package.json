{
    "name": "react-focus-component",
    "version": "1.0.0",
    "description": "A react higher order component that brings other components into visual focus/highlight by placing an overlay over all other elements on the page",
    "main": "index.js",
    "scripts": {
        "start": "webpack-dev-server --mode development",
        "prepublish": "babel --plugins transform-es2015-modules-umd src --ignore __tests__ --out-dir ./dist",
        "lint": "eslint ./src",
        "lintfix": "eslint ./src --fix",
        "unittest": "mocha $npm_package_options_mocha",
        "test": "npm run lint && npm run unittest",
        "test-watch": "npm run unittest -- --watch --watch-extensions js"
    },
    "options": {
        "mocha": "--require scripts/mocha-runner src/**/__tests__/**/*.js"
    },
    "devDependencies": {
        "babel-cli": "^6.6.4",
        "babel-core": "^6.26.3",
        "babel-eslint": "^6.0.2",
        "babel-loader": "^7.1.4",
        "babel-plugin-transform-es2015-modules-umd": "^6.6.5",
        "babel-polyfill": "^6.7.4",
        "babel-preset-env": "^1.7.0",
        "babel-preset-es2015": "^6.6.0",
        "babel-preset-react": "^6.5.0",
        "babel-preset-stage-2": "^6.5.0",
        "chai": "^3.5.0",
        "enzyme": "^2.2.0",
        "eslint": "^2.7.0",
        "eslint-plugin-babel": "^3.1.0",
        "eslint-plugin-react": "^4.2.3",
        "jsdom": "^8.1.0",
        "mocha": "^2.4.5",
        "nodemon": "^1.9.1",
        "react": "^15.0.0",
        "react-addons-test-utils": "^15.0.0",
        "react-dom": "^15.0.0",
        "sinon": "^1.17.3",
        "webpack": "^4.8.3",
        "webpack-cli": "^2.1.3",
        "webpack-dev-server": "^3.1.4"
    },
    "peerDependencies": {
        "react": "~0.14.8 || ^15.0.0",
        "react-dom": "~0.14.8 || ^15.0.0"
    },
    "dependencies": {
        "babel-runtime": "^6.6.1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hofnarwillie/react-focus-component.git"
    },
    "keywords": [
        "react",
        "focus",
        "highlight",
        "blur",
        "overlay",
        "tutorial",
        "intro"
    ],
    "author": "Willem Le Roux",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/hofnarwillie/react-focus-component/issues"
    },
    "homepage": "https://github.com/hofnarwillie/react-focus-component#readme"
}
